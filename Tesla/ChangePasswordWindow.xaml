<Window x:Class="Tesla.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangePasswordWindow" Height="312.406" Width="315.789">
    <Grid >
        <Label Content="Old Password" HorizontalAlignment="Left" Margin="35,72,0,0" VerticalAlignment="Top" Width="84"/>
        <PasswordBox x:Name="OldPasswordBox" HorizontalAlignment="Left" Margin="147,80,0,0" VerticalAlignment="Top" Width="107"/>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="35,128,0,0" VerticalAlignment="Top" Width="98"/>
        <Label Content="Confirm Password" HorizontalAlignment="Left" Margin="35,177,0,0" VerticalAlignment="Top" Width="107"/>
        <PasswordBox x:Name="NewPasswordBox" HorizontalAlignment="Left" Margin="147,128,0,0" VerticalAlignment="Top" Width="107"/>
        <PasswordBox x:Name="ConfirmPasswordBox" HorizontalAlignment="Left" Margin="147,177,0,0" VerticalAlignment="Top" Width="107"/>
        <Button x:Name="ChangePassword" Content="Change Password" HorizontalAlignment="Left" Margin="45,227,0,0" VerticalAlignment="Top" Width="113" Click="ChangePassword_Click"/>
